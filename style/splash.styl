@require 'constants'

pointW = 7px

html
body 
  width 100%
  height 100%
  padding 0
  margin 0

body 
  background pageBackground
  font-family fontFamily
  font-size fontSize*2
  font-weight bold

.loading 
  position absolute
  right 25%
  top 30%

.loading:after 
  content '...'
  position absolute
  display inline-block
  overflow hidden
  -webkit-animation ellipsis 2s linear infinite

img
  position absolute
  top 16%

@keyframes ellipsis
  0% 
    width 0
  25% 
    width pointW
  50% 
    width 2*pointW
  75% 
    width 3*pointW
  100%
    width 0
